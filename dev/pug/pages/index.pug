extends ../layout/main

block variables
	- var title = 'Главная страница'
	- var pageClass = 'index-page'

block content

	section.main
		.main__back
		.main__content
			.main__description
				.main__logo
					img(src='static/img/svg/idoctor_logo_white.svg')
				.main__heading
					span.like-h1 Экспресс-ремонт
					span.like-h2 iPhone / iPad в Архангельске
