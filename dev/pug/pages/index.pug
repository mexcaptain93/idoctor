						| но и гарантия качества на каждую услугу от 3 месяцев.

			.main__menu
				.menu
					.menu__item
						a(href="#") Стоимость
					.menu__item
						a(href="#") Акция дня
					.menu__item
						a(href="#") Сервис
					.menu__item
						a(href="#") Услуги Plus
					.menu__item
						a(href="#") Отзывы
					.menu__item
						a(href="#") Партнёры
					.menu__item
						a(href="#") Контакты


		.main__down
			.arrow.arrow_down
				include ../../static/img/svg/icon_arrow.svg

	section.price


	a(href="ui-kit.html") UI-kit