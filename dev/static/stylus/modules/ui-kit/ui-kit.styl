.ui-kit
  .container
    padding-top 130px

  section
    margin-bottom 40px
    & > .like-h2
      margin-bottom 30px



 // Текст
.like-h1
  display inline-block
  color red
  @extend .museo-900
  font-size 36px
  line-height 39px

.like-h2
  display inline-block
  color white
  @extend .museo-500
  font-size 36px
  line-height 39px

.like-h3
  display inline-block
  color white
  @extend .museo-900
  font-size 24px
  line-height 24px

.like-h4
  display inline-block
  color white
  font-size 16px
  @extend .museo-500

  &_red
    display inline-block
    color red

.like-h5
  display inline-block
  color white
  @extend .museo-300
  font-size 16px

.like-h6
  display inline-block
  color gray2
  @extend .museo-100
  font-size 13px

// Элементы
.btn
  display inline-block
  cursor pointer
  width 180px
  height 40px
  background-image url('../img/svg/button.svg')
  background-repeat no-repeat
  background-size cover
  @extend .museo-500
  font-size 10px
  line-height 40px
  text-transform uppercase
  text-align center
  letter-spacing 0.1em
  transition opacity linear .3s

  &:hover
    opacity .85

.lbl
  display inline-block
  width 150px
  height 36px
  background-image url('../img/svg/label_1.svg')
  background-repeat no-repeat
  background-size cover
  @extend .museo-300
  color black
  font-size 16px
  line-height 36px
  text-align center
  letter-spacing 0

  &_wide
    width 250px
    background-image url('../img/svg/label_2.svg')

