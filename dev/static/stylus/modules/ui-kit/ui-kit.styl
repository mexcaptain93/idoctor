.ui-kit

  section
    margin-bottom 40px
    & > .like-h2
      margin-bottom 30px

// Текст

a
  color white
  text-decoration none
  transition color linear .3s

  &:hover
    color red

.like-h1
  color red
  @extend .museo-900
  font-size 36px
  line-height 39px

  @media mobile
    font-size 30px
    line-height 30px

.like-h2
  color white
  @extend .museo-500
  font-size 36px
  line-height 39px

.like-h3
  color white
  @extend .museo-900
  font-size 24px
  line-height 24px

.like-h4
  color white
  font-size 16px
  @extend .museo-500


.like-h5
  color white
  @extend .museo-300
  font-size 16px

.like-h6
  color gray2
  @extend .museo-100
  font-size 13px

// Элементы
.btn
  display inline-block
  cursor pointer
  width 180px
  height 40px
  background-image url('../img/svg/button.svg')
  background-repeat no-repeat
  background-size cover
  @extend .museo-500
  font-size 10px
  line-height 40px
  text-transform uppercase
  text-align center
  letter-spacing 0.1em
  transition opacity linear .3s

  &:hover
    opacity .85
    color white



.lbl
  display inline-block
  width 150px
  height 36px
  background-image url('../img/svg/label_1.svg')
  background-repeat no-repeat
  background-size cover
  @extend .museo-300
  color black
  font-size 16px
  line-height 36px
  text-align center
  letter-spacing 0

  &_wide
    width 250px
    background-image url('../img/svg/label_2.svg')

.arrow
  display inline-block
  position relative
  cursor pointer
  width 40px
  height 40px
  border-radius 20px
  background-color transparent
  transition background-color linear .3s

  &:hover
    background-color white

  svg
    width 14px
    height 11px
    position absolute
    top 50%
    margin-top -6.5px
    left 50%
    margin-left -7px

    path
      transition fill linear .3s

  &_white

    &:hover
      svg path
        fill red !important

    svg path
      fill white !important

  &_red-hover
    svg path
      fill red !important

    &:hover
      background-color red

      svg path
        fill white !important

  &_down
    background-color white

    &:hover
      background-color red

      svg path
        fill white !important

    svg
      transform rotate(90deg)

.pain
  display inline-block
  cursor pointer
  width 28px
  height 29px
  background-image url('../img/svg/icon_price_cross.svg')
  background-size cover
  opacity .5
  transition opacity linear .3s

  &:hover
    opacity 1

.refresh
  cursor pointer
  width 25px
  height 20px

  svg
    width 25px
    height 20px

    path
      transition fill linear .3s

  &:hover
    svg path
      fill red !important

.menu

  &__item
    margin-bottom 16px
    padding-left 0
    transition all linear .3s
    color white

    @media mobile
      margin-bottom 30px

    &:last-child

      @media mobile
        margin-bottom 0

    &:hover
      padding-left 8px
      color red
      @extend .museo-500


.contact-line
  position relative

  &__line
    display block
    height 1px
    width 100%
    background-color gray2
    position relative
    top 17px

  &__link
    position relative
    padding-right 15px
    background-color black
    z-index 1
    @extend .like-h6
    text-decoration: underline
    transition all linear .3s

    &:hover
      color red

  &__social
    position absolute
    top 5px
    right 21px
    background-color black
    padding 0 9px
    user-select none

  .social

    &__item
      display inline-block
      vertical-align middle

      a
        display inline-block
        max-height 100%
        max-width 100%

      svg path
        fill gray2!important
        transition fill linear .3s

      &:hover
        svg path
          fill red!important

      &_vk
        margin-right 6px

        svg, a
          width 21px
          height 13px

      &_instagram

        svg, a
          width 16px
          height 16px



.input
  position: relative
  display inline-block
  width 240px

  &__field
    width 100%
    height 40px
    border none
    border-radius 20px
    @extend .like-h4
    color gray2
    padding 7px 20px
    caret-color red

    &:active, &:focus
      color black

  &__btn
    background none
    border none
    width 14px
    height 11px
    cursor pointer
    padding 5px
    box-sizing content-box
    position absolute
    top 50%
    margin-top -8px
    right 12px
  &_btn

    input
      padding-right 40px

    svg
      width 14px
      height 11px
      position absolute
      top 50%
      margin-top -6.5px
      right 5px

      path
        fill red!important


.toggler
  position relative
  width 200px
  height 40px
  border-radius 20px
  display inline-block
  background-color gray3
  font-size 0

  &__back
    position absolute
    background linear-gradient(90deg, red_dark, red)
    width 50%
    height 40px
    border-radius 20px
    transition left linear .3s

  &__items
    display flex
    justify-content space-around

  &__item
    width 100px
    cursor pointer
    text-align center
    @extend .like-h4
    line-height 20px
    position relative
    z-index 1
    padding 10px 25px

  &_model
    width 160px

    .toggler__item
      width auto
      padding 10px 15px


    .toggler__back
      width 25%

.show-price
  display flex

  @media mobile
    flex-direction column
    align-items center

  &__icon
    width 29px
    height 37px
    margin-right 20px

    @media mobile
      margin-right 0
      margin-bottom 18px

    svg
      max-width 100%
      max-height 100%

  &__text
    padding-top 2px

    @media mobile
      text-align center

    .like-h4
      display block
      margin-bottom 3px

    span
      display block

.delimiter
  width 100%
  height 1px
  background-color gray2


.partner
  display inline-block
  position relative
  width 440px
  height 150px
  background linear-gradient(90deg, #1a1a1a, #262626)
  border-radius 10px

  &:hover
    background linear-gradient(90deg, red_dark, red)

    .partner

      &__dots
        background-image url('../img/svg/dots_partners_light.svg')

      &__heading

        span
          color white

  &_garmin

    .partner

      &__image
        margin-left 38px

      &__heading
        margin-bottom 21px

        img
          width 140px

      &__text
        padding-top 12px
        padding-left 41px

  &__dots
    background-image url('../img/svg/dots_partners_dark.svg')
    width 100%
    height 100%
    background-repeat no-repeat
    background-size 60%
    background-position center right
    position absolute
    top 5px
    right 2px
    z-index 0

  &__content
    display flex
    position relative
    z-index 1

  &__image
    margin-top -30px
    margin-left 28px

  &__text
    padding-top 26px
    padding-left 37px

  &__heading
    margin-bottom 19px

    span
      color red

  &__service

    span
      display block
      margin-bottom -1px
