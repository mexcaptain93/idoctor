.header
  padding-top 60px
  z-index 1

  @media mobile
    display none

  .container
    position relative

  &__items
    display flex
    justify-content space-between
    margin-bottom 10px


  &__item

    .item

      &__label
        margin-bottom 12px

    &_search
      width 82px
      position relative

      a
        position absolute
        bottom 11px
        left 100%
        margin-left 12px

        path
          transition .3s linear fill

        &:hover

          path
            fill red !important

      svg
        width 14px
        height 14px


    &_address

      .item__value
        span
          user-select all

    &_contacts
      .item__value
        *
          user-select auto

    &_price
      width 180px

  &__search
    position absolute
    top 0
    bottom 20px
    left 0
    right 189px
    background-color black
    opacity 0
    z-index -1
    transition all linear .3s

    &_visible
      z-index 1
      opacity 1


    .search
      &__hint
        margin-bottom: 12px;

    .input
      width 100%

      &__btn
        margin-top -11px

        svg
          height 14px

.header-mobile
  display none
  position relative
  padding 20px 15px

  @media mobile
    display block

  &__top
    display flex
    justify-content space-between
    align-items center
    margin-bottom 17px

  &__logo
    max-width 115px

    img
      width 100%

  &__burger

    .burger

      &__item
        width 20px
        height 2px
        background-color white
        margin-bottom 4px

        &:last-child
          margin-bottom 0

    &_active

      .burger__item
        background-color red

  &__menu
    display none
    position absolute
    top 50px
    left 0
    right 0
    background-color black
    z-index 2
    padding 13px 15px 30px 15px

    .menu

      &__list
        border-top 1px solid gray2
        padding-top 23px
        margin-bottom 27px

      &__item
        padding-left 19px

      &__search

        .input
          width 100%

  &__contacts

    span, a
      display block


