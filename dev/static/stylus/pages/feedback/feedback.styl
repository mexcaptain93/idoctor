.feedback

  .feedback
    margin 57px 0
    max-width 620px
    position relative

    &__back
      position absolute
      top -257px
      height 670px
      left -250px
      right 0
      background-image url('../img/general/1_welcome_back_pic.jpg')
      filter grayscale(0.2) opacity(0.1)

    &__name
      margin-bottom 23px

    &__text
      line-height 19px
      margin-bottom 88px

      p
        text-indent 3px

  &__form
    display flex
    align-items flex-end
    padding-left 3px

  .form

    &__item
      margin-right: 8px

      &:last-child
        margin-right 0

    &__label
      margin-bottom 8px