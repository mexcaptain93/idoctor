.index-page

  section.main
    padding-top 57px

  .main

    &__content
      display flex
      justify-content space-between
      margin-bottom 42px

    &__description
      z-index 1
      width 530px
      user-select none

    &__back
      position absolute
      top -157px
      height 670px
      left -250px
      right 0
      background-image url('../img/general/1_welcome_back_pic.jpg')
      filter grayscale(0.2) opacity(0.1)


    &__logo
      width 120px
      height 24px
      margin-bottom 55px

      img
        max-width 100%
        max-height 100%

    &__heading

      p
        color gray2

      .like-h1
        margin-bottom 3px
        display block

      .like-h2
        display inline-block
        vertical-align middle
        margin-right 10px

      .refresh
        display inline-block
        vertical-align middle

      .like-h5
        margin-top 18px


    &__menu
      z-index 1
      width 180px

    &__down
      display block
      text-align center

  section.price

    .device
      display flex
      justify-content center
      margin-top 57px
      margin-left -38px
      user-select none
      margin-bottom 60px


      &__type
        text-align center
        padding-right 10px

        span
          display block
          margin-bottom 4px

      &__model
        text-align center
        padding-left 10px

        span
          display block
          margin-bottom 4px

    .diagnosis
      display flex

      &__hint
        display flex
        flex-direction column
        justify-content space-between
        width 33.3%

        .hint

          &__top
            padding-top 55px

            .like-h1
              display block
              margin-bottom 23px

          &__bottom

            .like-h5
              display block
              margin-bottom 15px

              .bold
                font-weight 900

            .input
              margin-bottom 4px


      &__result
        display flex
        flex-direction column
        justify-content space-between
        width 33.3%
        padding-top 59px
        padding-left 20px

        .result

          &__time-price
            display flex
            margin-top 22px

            .like-h6
              margin-bottom 4px

            span
              display block

          &__time
            margin-right 40px

          &__bottom

            .show-price
              margin-bottom 20px



      &__phone
        width 33.3%
        text-align center

        .phone

          &__image
            position relative

            img
              max-height 385px

            .pain
              position absolute

              &_1
                top 5px
                left 85px

              &_2
                top 77px
                left 48px

              &_3
                top 134px
                left 76px

              &_4
                top 215px
                left 76px

              &_5
                top 342px
                left 166px

              &_6
                top 371px
                left 166px

              &_7
                top 226px
                left 229px

