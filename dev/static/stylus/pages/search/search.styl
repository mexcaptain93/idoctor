.search-page

  .results
    max-width 620px
    margin-top 57px

    &__heading
      margin-bottom 49px

      .like-h1
        color white

    &__list
      margin-bottom 95px

  .search-item
    margin-bottom 50px

    &:last-child
      margin-bottom 0

    &__heading
      text-transform uppercase
      margin-bottom 10px

      .like-h3
        font-size 16px

    &__text
      text-indent 34px
      margin-bottom 21px

    &__read-more
      display block
      overflow hidden

      &::after
        content ''
        display inline-block
        vertical-align middle
        margin-top:10px
        margin-right: -100%;
        width 100%
        height 1px
        background-color white
        border-left 13px solid black

      a
        color red
        text-decoration underline


  .callback
    max-width 620px
    margin-bottom 57px

    &__heading
      margin-bottom 16px

    &__text
      margin-bottom 87px

    &__form
      display flex
      align-items flex-end

    .form

      &__item
        margin-right: 8px

        &:last-child
          margin-right 0

      &__label
        margin-bottom 8px